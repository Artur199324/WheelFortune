<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bbbbbbbb">

    <android.widget.Button
        android:id="@+id/buttonOn"
        android:layout_width="207dp"
        android:layout_height="43dp"
        android:layout_marginTop="504dp"
        android:background="#5B91E2"
        android:text="one on one"
        android:textColor="#FBFBFB"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.widget.Button
        android:id="@+id/buttonIn"
        android:layout_width="207dp"
        android:layout_height="43dp"
        android:layout_marginTop="504dp"
        android:background="#5B91E2"
        android:text="Connect to the Internet"
        android:textColor="#FBFBFB"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.widget.Button
        android:id="@+id/buttonAnd"
        android:layout_width="207dp"
        android:layout_height="43dp"
        android:layout_marginTop="20dp"
        android:background="#5B91E2"
        android:text="with android"
        android:textColor="#FBFBFB"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/buttonOn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/buttonOn"
        app:layout_constraintTop_toBottomOf="@+id/buttonOn" />

    <android.widget.Button
        android:id="@+id/buttonClo"
        android:layout_width="207dp"
        android:layout_height="43dp"
        android:layout_marginTop="20dp"
        android:background="#5B91E2"
        android:text="close"
        android:textColor="#FBFBFB"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/buttonAnd"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/buttonAnd"
        app:layout_constraintTop_toBottomOf="@+id/buttonAnd" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="98dp"
        android:layout_height="72dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="568dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ff" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="98dp"
        android:layout_height="72dp"
        android:layout_marginEnd="100dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:srcCompat="@drawable/gg" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="98dp"
        android:layout_height="72dp"
        android:layout_marginTop="4dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:srcCompat="@drawable/gg" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="98dp"
        android:layout_height="72dp"
        android:layout_marginTop="4dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:srcCompat="@drawable/ff" />

</androidx.constraintlayout.widget.ConstraintLayout>